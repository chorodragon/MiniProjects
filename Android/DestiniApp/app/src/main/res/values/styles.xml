<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="firstLayerStyle">
        <item name="android:layout_marginTop">@dimen/marginElements</item>
        <item name="android:layout_marginBottom">@dimen/marginElements</item>
    </style>

    <style name="buttonStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/buttonFontColor</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>
